<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../CSS/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.services.interfaces.JoinedBoardsService">
      <HBox fx:id="topHBox" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" prefHeight="29.0" prefWidth="600.0">
          <children>
              <Button fx:id="createBoardButton" alignment="TOP_LEFT" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#showCreateBoard" text="Create new board" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                      <Insets left="10.0" right="45.0" top="10.0" />
                  </HBox.margin>
              </Button>
              <Label fx:id="boardOverviewTitle" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Your boards" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="ALWAYS">
                  <font>
                      <Font size="28.0" />
                  </font>
                  <HBox.margin>
                      <Insets top="5.0" />
                  </HBox.margin>
              </Label>
              <TextField fx:id="joinByKey" onKeyPressed="#joinPressed" prefHeight="26.0" prefWidth="128.0" promptText="Join by key" HBox.hgrow="NEVER">
                  <HBox.margin>
                      <Insets top="10.0" />
                  </HBox.margin>
                  <font>
                      <Font size="10.0" />
                  </font>
         </TextField>
              <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#joinByKey" text="Join">
                  <HBox.margin>
                      <Insets left="5.0" right="10.0" top="10.0" />
                  </HBox.margin>
              </Button>
          </children>
      </HBox>
      <ScrollPane fx:id="boardsScroll" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="45.0" AnchorPane.bottomAnchor="60.0" fitToHeight="true" fitToWidth="true" layoutX="1.0" layoutY="45.0" prefHeight="303.0" prefWidth="600.0">
      <content>
         <VBox fx:id="boardsList" alignment="CENTER" prefHeight="230.0" prefWidth="264.0" />
      </content>
      </ScrollPane>
   <HBox fx:id="bottom" alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" layoutY="350.0" prefHeight="69.0" prefWidth="601.0">
      <children>
          <Button fx:id="disconnectButton" alignment="TOP_RIGHT" contentDisplay="CENTER" maxWidth="-Infinity" mnemonicParsing="false" onAction="#disconnectPressed" text="Disconnect" />
      </children>
   </HBox>

</AnchorPane>
