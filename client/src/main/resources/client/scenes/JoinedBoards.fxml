                        <HBox.margin>
                            <Insets right="10.0" top="10.0" />
                        </HBox.margin>
                    </Button>
                </children>
            </HBox>
        </top>
        <center>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <content>
               <VBox fx:id="boardsList" alignment="CENTER" prefHeight="339.0" prefWidth="594.0" />
            </content>
            </ScrollPane>
        </center>
    </BorderPane>

</AnchorPane>
